{
	"name": "@test/node-core",
	"version": "0.1.0",
	"private": true,
	"description": "test",
	"keywords": [],
	"author": "Milos Bugarinovic <milos.bugarinovic@gmail.com> (https://milos.bugarinovic.com)",
	"main": "./src/index.ts",
	"type": "module",
	"scripts": {
		"alias": "tsc-alias",
		"build": "npm run clean && npm run tsc && npm run alias",
		"build:on-success": "npm run tsc-cleaner && npm run alias",
		"clean": "rimraf ./dist",
		"debug": "npm run serve -- --inspect=0.0.0.0:9229",
		"debug:brk": "npm run serve -- --inspect-brk=0.0.0.0:9229",
		"jest": "npx jest",
		"serve": "nodemon",
		"start": "node --experimental-specifier-resolution=node ./dist/node-core/src/index.js",
		"start:ts": "ts-node ./src/index.ts",
		"test": "concurrently -c auto 'npm:test:*'",
		"test-coverage-unit": "npm run test:unit -- --coverage",
		"test-coverage-unit-publish": "codecov",
		"test:e2e": "TZ=utc npm run jest -- --config=./test/jest.config.js",
		"test:int": "TZ=utc npm run jest -- --config=./jest.config.int.js",
		"test:unit": "TZ=utc npm run jest -- --config=./jest.config.unit.js",
		"tsc": "tsc -b ./tsconfig.build.json",
		"tsc-check": "npm run tsc -- --noEmit",
		"tsc-cleaner": "ts-cleaner --dist ./dist/node-core/src",
		"tsc-cleaner-watch": "npm run tsc-cleaner -- --watch",
		"tsc-time": "npm run tsc -- --diagnostics",
		"tsc-watch": "tsc-watch -p ./tsconfig.build.json --preserveWatchOutput --onCompilationComplete 'npm run build:on-success'",
		"watch": "npm run tsc-watch"
	},
	"devDependencies": {
		"@types/jest": "29.5.3",
		"@types/node": "20.4.5",
		"concurrently": "8.2.0",
		"jest": "29.6.1",
		"jest-extended": "4.0.0",
		"nodemon": "3.0.1",
		"rimraf": "5.0.1",
		"source-map-support": "0.5.21",
		"ts-cleaner": "1.0.5",
		"ts-jest": "29.1.1",
		"ts-node": "10.9.1",
		"tsc-alias": "1.8.7",
		"tsc-watch": "6.0.4",
		"typescript": "5.1.6"
	}
}
